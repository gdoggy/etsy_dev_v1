{
    "swagger": "2.0",
    "info": {
        "description": "这是一个用于管理多个 Etsy 店铺的自动化系统 API",
        "title": "Etsy 店群管理系统 API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8082",
    "basePath": "/api",
    "paths": {
        "/api/auth/callback": {
            "get": {
                "description": "接收 Etsy 返回的 code 和 state，换取 Token 并入库",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth (授权模块)"
                ],
                "summary": "Etsy 授权回调",
                "parameters": [
                    {
                        "type": "string",
                        "description": "授权码",
                        "name": "code",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "安全校验码",
                        "name": "state",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "授权成功信息",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "参数错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "get": {
                "description": "系统会自动分配一个负载最低的开发者账号，并生成 OAuth 授权跳转链接",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth (授权模块)"
                ],
                "summary": "获取 Etsy 授权链接",
                "responses": {
                    "302": {
                        "description": "Redirect to Etsy",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "503": {
                        "description": "资源不足错误",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}